@model Library.Models.Person

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

@Html.Partial("Partial/_details", Model)

<fieldset>
    <legend>Ausleihen</legend>
    @if (Model.canBorrow)
    {
        @Html.ActionLink("Buch ausleihen", "Borrow", new { id = Model.id })
    }
    else
    {
        @Html.Label("Diese Person kann keine weiteren Bücher mehr ausleihen")
    }
</fieldset>


@Html.Partial("../Borrowing/DetailsPerPerson", Model.borrowings)

@Helpers.detailsActions(new { id = Model.id })