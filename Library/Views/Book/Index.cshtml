@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>@ViewBag.Title</h2>



<fieldset>
    <legend>Hinzufügen</legend>
    @Html.ActionLink("Neues Buch", "Create")
</fieldset>
    <fieldset>
        <legend>Bücherliste</legend>

        @if (Model.Count() == 0)
        {
            @Helpers.listEmpty()
        }
        else
        {
            <h4>Bitte klicken Sie auf den Titel für weitere Details</h4>
            
            <table>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.genre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.isAvaliable)
                    </th>
                </tr>

                @foreach (var item in Model.OrderBy(x => x.title))
                {
                    <tr>

                        <td>
                            @Helpers.bookLink(item)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.author)

                        </td>
                        <td align="center">
                            @Html.DisplayFor(modelItem => item.genre)
                        </td>
                        <td align="center">
                            @if (item.isAvaliable)
                            {
                                @Html.Label("Ja")
                            }
                            else
                            {
                                @Html.Label("Nein")
                            }
                        </td>

                    </tr>
                }

            </table>
        }
    </fieldset>
